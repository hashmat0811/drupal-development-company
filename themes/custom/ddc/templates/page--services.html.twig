          {{ item.entity.field_banner_description.value|raw }}
        </div>
      </div>
    </div>
  {% elseif loop.index == 5 %}
    <div class="layout layout5 py-lg-4">
      <div class="container p-lg-0">
        <div class="row pt-5">
          <div class="col-md-7">
            <h2>{{ item.entity.field_title.value|raw }}</h2>
            <div class="body">
              {{ item.entity.field_banner_description.value|raw }}
            </div>
          </div>
          <div class="col-md-5">
            <img src="{{ item.entity.field_image.entity.uri.value | image_style('portfolio') }}" alt="{{item.entity.field_image.alt}}"/>
            {# <img src="{{ file_url(item.entity.field_image.entity.fileuri) }}" /> #}
          </div>
        </div>
      </div>
    </div>
  {% elseif loop.index == 6 %}
    <div class="layout layout6 py-lg-4">
      <div class="container">
        <div class="row pt-lg-5">
          <div class="col-md-5">
            <img src="{{ item.entity.field_image.entity.uri.value | image_style('portfolio') }}" alt="{{item.entity.field_image.alt}}"/>
            {# <img src="{{ file_url(item.entity.field_image.entity.fileuri) }}" /> #}
          </div>
          <div class="col-md-7">
            <h2>{{ item.entity.field_title.value|raw }}</h2>
            <div class="body">
              {{ item.entity.field_banner_description.value|raw }}
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}

