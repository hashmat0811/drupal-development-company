{% include 'themes/custom/ddc/templates/includes/header.html.twig' %}



<div class="inner-banner">
  <div class="container">
    <div>
      <div class="banner-text">
        <h1 class="animated slideInUp">{{ node.title.value }}</h1>
        <p class="text-faded mb-5 animated slideInUp site-breadcrumb">{{ page.breadcrumb }}</p>
      </div>
    </div>
  </div>
  <div class="slide-image"> <img src="{{ file_url(node.field_banner_image.entity.fileuri) }}" alt="{{node.field_banner_image.alt}}" /></div>
</div>



<div class="content-container">
  <div class="container">
    <div class="work-section pl-5 pr-5">
      {% for item in node.field_portfolios %}
      <div class="row p-5">
        {% if  loop.index % 2 == 0 %}
          <div class="col-md-6 order-12 my-auto">
            <div class="intro-img text-center">
              <img src="{{ file_url(item.entity.field_image.entity.fileuri) }}" alt="{{item.entity.field_image.alt}}" />
            </div>
          </div>
          <div class="col-md-6 order-12 my-auto">
            <h3>{{ item.entity.field_title.value }}</h3>
            <p>{{ item.entity.field_banner_description.value|raw }}</p>
              <h5>Technology Used</h5>
              <ul>
                  <li>Drupal</li>
                  <li>HTML</li>
                  <li>CSS</li>
                  <li>Multi Site</li>
              </ul>
          </div>
        {% else %}
          <div class="col-md-6 my-auto">
            <h3>{{ item.entity.field_title.value }}</h3>
            <p>{{ item.entity.field_banner_description.value|raw }}</p>
              <h5>Technology Used</h5>
              <ul>
                  <li>Drupal</li>
                  <li>HTML</li>
                  <li>CSS</li>
                  <li>Multi Site</li>
              </ul>
          </div>
          <div class="col-md-6 my-auto">
            <div class="intro-img text-center">
              <img src="{{ file_url(item.entity.field_image.entity.fileuri) }}" alt="{{item.entity.field_image.alt}}" />
            </div>
          </div>
        {% endif %}
      </div> 
      {% endfor %}
    </div>
  </div>
</div>



{% include 'themes/custom/ddc/templates/includes/footer.html.twig' %}
