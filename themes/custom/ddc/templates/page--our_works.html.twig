{% include 'themes/custom/ddc/templates/includes/header.html.twig' %}



<div class="inner-banner">
  <div class="container">
    <div>
      <div class="banner-text">
        <h1 class="animated slideInUp">{{ node.title.value }}</h1>
      </div>
    </div>
  </div>
  <div class="slide-image"> <img src="{{ file_url(node.field_banner_image.entity.fileuri) }}" alt="{{node.field_banner_image.alt}}" /></div>
</div>
{{ page.breadcrumb }}


<div class="content-container works-gallery">
  <div class="container">
    <div class="work-section p-lg-5">
      {% for item in node.field_portfolios %}
      <div class="row white-bg p-lg-5">
        {% if  loop.index % 2 == 0 %}
          <div class="col-md-5 p-lg-0">
            <div class="intro-img text-left">
              {% for items in item.entity.field_slider_images %}
                <img class="w-100" src="{{ file_url(items.entity.fileuri) }}" alt="{{items.alt}}" />
              {% endfor %}
              {# <img class="w-100" src="{{ file_url(item.entity.field_image.entity.fileuri) }}" alt="{{item.entity.field_image.alt}}" /> #}
            </div>
            <h5>Services Offered</h5>
            <ul>
                {% for items in item.entity.field_services %}
                  <li>{{ items.value }}</li>
                {% endfor %}
            </ul>
            <h5>Industry</h5>
            <ul>
                {% for items in item.entity.field_industries %}
                  <li>{{ items.value }}</li>
                {% endfor %}
            </ul>
            <h5>Technologies</h5>
            <ul>
                {% for items in item.entity.field_list %}
                  <li>{{ items.value }}</li>
                {% endfor %}
            </ul>
          </div>
          <div class="col-md-7 pr-lg-5 pl-lg-5">
            <h3>{{ item.entity.field_title.value }}</h3>

              <p>{{ item.entity.field_banner_description.value|raw }}</p>
          </div>
        {% else %}
          <div class="col-md-7 pl-lg-0 pr-lg-5">
            <h3>{{ item.entity.field_title.value }}</h3>

              <p>{{ item.entity.field_banner_description.value|raw }}</p>
          </div>
          <div class="col-md-5 p-lg-0">
            <div class="intro-img text-right">
              <img class="w-100" src="{{ file_url(item.entity.field_image.entity.fileuri) }}" alt="{{item.entity.field_image.alt}}" />
            </div>
            <h5>Services Offered</h5>
            <ul>
                {% for items in item.entity.field_services %}
                  <li>{{ items.value }}</li>
                {% endfor %}
            </ul>
            <h5>Industry</h5>
            <ul>
                {% for items in item.entity.field_industries %}
                  <li>{{ items.value }}</li>
                {% endfor %}
            </ul>
            <h5>Technologies</h5>
            <ul>
                {% for items in item.entity.field_list %}
                  <li>{{ items.value }}</li>
                {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</div>



{% include 'themes/custom/ddc/templates/includes/footer.html.twig' %}
